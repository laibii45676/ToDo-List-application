<!DOCTYPE html>
<html>
<head>
  <title>Simple ToDo List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: 40px auto;
    }
    h2 {
      text-align: center;
    }
    ul {
      padding-left: 0;
    }
    li {
      list-style: none;
      padding: 10px;
      margin-bottom: 5px;
      background: #f0f0f0;
      display: flex;
      justify-content: space-between;
    }
    form {
      display: block;
      margin: 0 auto;
      text-align: center;
      width: 300px;
    }
  </style>
</head>
<body>
  <h2>My ToDo List</h2>
  <form action="/add" method="POST">
    <input type="text" name="task" placeholder="Enter task" required>
    <button type="submit">Add</button>
  </form>

  <ul>
    <% tasks.forEach(function(task) { %>
      <li><%= task %></li>
    <% }); %>
  </ul>
</body>
</html>

